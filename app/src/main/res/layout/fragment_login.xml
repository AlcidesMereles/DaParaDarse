<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/login_fragment"
    tools:context="lp4.untref.daparadarse.LoginFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--android:layout_weight="1"-->
        <LinearLayout
            android:id="@+id/view_formulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="Name"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Edad"
                android:id="@+id/textViewEdad" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textSize="14dp"
                android:inputType="number"
                android:id="@+id/editTextEdad"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ciudad"
                android:id="@+id/textViewCiudad" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textSize="14dp"
                android:inputType="textPersonName"
                android:capitalize="characters"
                android:id="@+id/editTextCiudad"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Provincia"
                android:id="@+id/textViewProvincia" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textSize="14dp"
                android:id="@+id/editTextProvincia"
                android:inputType="textPersonName"
                android:capitalize="words"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pais"
                android:id="@+id/textViewPais" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textSize="14dp"
                android:inputType="textPersonName"
                android:id="@+id/editTextPais" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Me interesan:"
                android:id="@+id/textViewMeInteresan" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mujeres"
                android:id="@+id/checkBoxMujeres"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hombres"
                android:id="@+id/checkBoxHombres"
                android:checked="false"
                android:layout_gravity="right"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="7dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rango de edad"
                android:id="@+id/textViewRangoDeEdad" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Desde"
                android:id="@+id/textViewEdadDesde" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hasta"
                android:id="@+id/textViewEdadHasta"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-25dp" />

            <EditText
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextEdadDesde" />

            <EditText
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextEdaHasta"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-41dp" />
            <TextView
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/idFacebook"
                android:visibility="gone"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:id="@+id/btnGuardar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Perfil"
                android:id="@+id/botonPerfil"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fb_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="#ff5fb9ff">

            <com.facebook.widget.LoginButton
                android:id="@+id/authButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
